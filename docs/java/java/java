//Наследование
class A{
    public void foo(){
        System.out.println("foo");
    }
}

class B extends A{
    @Override
    publuc void foo(){
        super.foo();
    }
}

//Геттеры и сеттеры
class Student{
    protected String name;
    public String getName(){
        return name;
    }
    public void setName(String name){
        this.name = name;
    }
}

Student s = new Student();

//Конструктор и конструктор по умолчанию
class Point{
    int x;
    int y;
    Point(int x, int y){
        this.x = x;
        this.y = y;
    }
    Point(){
        this(0, 0);
    }
}
Point p = new Point(1, 2);

//Компиляция
//jdk - java development kit
#javac Main.java //-> Main.class
//Запуск класса из консоли
java Main